{
  "name": "habit-tracker",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "npx wrangler dev",
    "deploy": "npx wrangler deploy",
    "db:migrate": "npx wrangler d1 execute habit-tracker-db --local --file=./schema.sql",
    "db:migrate:remote": "npx wrangler d1 execute habit-tracker-db --remote --file=./schema.sql",
    "user:create": "npx tsx scripts/create-user.ts",
    "import:csv": "npx tsx scripts/import-csv.ts"
  },
  "dependencies": {
    "hono": "^4.7.0",
    "@hono/zod-validator": "^0.7.0",
    "zod": "^4.3.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20250514.0",
    "wrangler": "^4.59.0",
    "typescript": "^5.8.0",
    "tsx": "^4.19.0",
    "better-sqlite3": "^12.6.0",
    "@types/better-sqlite3": "^7.6.13"
  }
}
